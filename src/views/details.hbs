        <section id="details-info">
            <h1>Details</h1>
            <div class="coin-image">
                <img src="{{image}}">
            </div>

            <div class="coin-info">
                <div class="coin-text">
                    <h1 id="name">{{name}}</h1>
                    <h3 id="payment">Payment method: {{method}}</h3>
                    <p id="price"><span>Price: ${{price}}</span></p>
                    <p id="description">{{description}}</p>
                </div>
                <div class="product-btn">
                    {{#if isOwner}}
                     <div class="author">
                        <a href="/details/edit/{{_id}}" class="btn-edit">Edit</a>
                        <a href="/details/delete/{{_id}}" class="btn-delete">Delete</a>
                    </div> 
                    {{else if user}}
                    {{#if isBuy}}
                    <p class="buy-message">You already bought these crypto coins.</p>
                    {{else}}
                     <a href="/details/buy/{{_id}}" class="btn-buy">Buy</a> 
                    {{/if}}
                </div>
                {{/if}}
            </div>
        </section>
    </main>
